<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <% @static_pages.each do |static_page| %>
    <url>
      <loc><%= static_page %></loc>
    </url>
  <% end %>
  <% @posts.each do |post| %>
    <url>
      <loc><%= post_url(post) %></loc>
      <lastmod>
        <%= post.published_date.strftime('%Y-%m-%d') %>
      </lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.5</priority>
    </url>
  <% end %>
</urlset>
