<div class="row">
<div class="col s12 m12">
  <div class="card z-depth-3">
    <div class="card-image">
      <%= link_to press_post_path(press_post) do %>
        <%= image_tag press_post.image_url() %>
      <% end %>
    </div>
    <div class="card-content blog-press_post">
      <%= link_to press_post_path(press_post) do %><h1><span class="card-title grey-text text-darken-2"><%= press_post.title %></span></h1><% end %>
      <div class="chip">
        <% if true %>
          <i class="fa fa-user"></i>
        <% else %>
          <%= image_tag press_post.user.image_url() %>
        <% end%>
        <%= press_post.user.first_name if press_post.user %> <%= press_post.user.last_name if press_post.user %>
      </div>
      <div class="chip">
        <%= press_post.published_date.strftime('%d %B %Y') %>
      </div>
      <hr>
      <p class="flow-text"><%= press_post.lead %></p>
    </div>
    <div class="card-action">
      <%= link_to "Read more", press_post %>
    </div>
  </div>
</div>
</div>
