<%= content_for :title, 'Coder Factory Academy Blog' %>
<%= content_for :description, 'Check out these great press_posts from our team relating to all things coding.' %>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<section id="top-section">
  <div class="container">
    <div class="row">
      <div class="col m11 offset-m1">
        <h1>Coder Factory Press</h1>
      </div>
    </div>
    <div class="row">
      <div class="col s12 m10 offset-m1">
        <%= render @press_posts %>
        <div class="card"><div class="card-content">
            <center>
              <% if @press_posts.size == 0 %>
                <h2> There are currently no press posts. Please check back later.</h2>
              <% end %>
              <%= will_paginate @press_posts, renderer: MaterializePagination::Rails %>
            </center>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
