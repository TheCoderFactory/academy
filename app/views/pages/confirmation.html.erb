<% if @type == "expo" %>
  <meta HTTP-EQUIV="REFRESH" content="5; url=<%= expo_path %>">
  <section id="workshop">
    <div class="container">
      <div class="row">
        <div class="col s10 offset-s1">
          <div class="card">
            <div class="card-content">
              <h3>Thank you for submitting your details! We'll be in touch via email shortly. </h3>
              <p class="flow-text">Stay tuned to find out if you're the prize draw winner...</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% else %>
  <%= content_for :title, "Thankyou for your #{@type}." %>
  <%= content_for :description, "Your #{@type} has been received. You should hear back from us within 1-2 business days." %>

  <% if @type == "fast track application" %>
    <% content_for :conversion_code do %>
      <%= render "shared/ga_code" %>
      <%= render "shared/fb_conversion_code_new_application" %>
      <%= render "shared/google_code_application_submission" %>
    <% end %>
  <% end %>

  <section id="workshop">
    <div class="container">
      <div class="row">
        <div class="col s10 offset-s1">
          <div class="card">
            <div class="card-content">
              <h3>Thanks for your <%= @type %>. <i class="fa fa-smile-o fa-fw"></i></h3>
              <p class="flow-text">An email has been sent to the email address you provided and our team will be in touch shortly.</p>
              <br><br>
              <h4>Wondering what to do now?</h4>
              <p class="flow-text">Go check out our <a href="/video-archive"><i class="fa fa-play-circle fa-fw"></i> video archive</a> to find out what Coder Factory is all about.</p>
              <h4>Videos not your thing?</h4>
              <p class="flow-text">Read up on whats happening in <a href="/blog"><i class="fa fa-book fa-fw"></i> our blog</a>.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
