<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<section id="top-section">
  <div class="container">
    <div class="row">
      <div class="col s12 m10 offset-m1">
        <h1>Academy Applications</h1>
        <div class="card">
          <div class="card-content">
            <span class="card-title">Course Intake: <%= @course_intake.start_date.strftime('%d %B %Y') + ", " + @course_intake.campus if @course_intake %></span>
            <table>
              <thead>
                <tr>
                  <th width="50%">Name</th>
                  <th width="25%">Date Received</th>
                  <th>Views</th>
                </tr>
              </thead>
              <tbody>
                <% @academy_applications.each do |app| %>
                  <tr>
                    <td><%= app.first_name %> <%= app.last_name %></td>
                    <td><%= app.created_at.strftime('%d %B %Y')  %></td>
                    <td><%= link_to '<i class="fa fa-eye"></i> View'.html_safe, app %></td>
                    <td><%= link_to '<i class="fa fa-trash-o"></i> Delete'.html_safe, app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <% if @academy_applications.size == 0 %>
              <center>
                <h3>There are currently no applications.<br> Please check back later.</h3>
              </center>
            <% end %>
          </div>
        </div>
        <div class="card">
           <div class="container">
             <center>
               <%= will_paginate @academy_applications %>
             </center>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
