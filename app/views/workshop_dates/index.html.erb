<section id="top-section">
<div class="container">
  <div class="row">
    <div class="col m12">
      <h2>Workshop Sessions</h2>
      <div class="card">
        <div class="card-content">
          <a class="modal-trigger" href="#modal1"><button class="btn btn-large submit-button">New session</button></a>
          <table class="table">
            <thead>
              <tr>
                <th width="40%">Date</th>
                <th>Views</th>
                <th colspan="2"></th>
              </tr>
            </thead>

            <tbody>
              <% @workshop_dates.each do |date| %>
                <tr>
                  <td><%= date.session_date%></td>
                  <td><%= link_to '<i class="fa fa-eye"></i> View Attendees'.html_safe, date %></td>
                  <td><%= link_to '<i class="fa fa-pencil"></i> Edit Date'.html_safe  %></td>
                  <td><%= link_to '<i class="fa fa-trash-o"></i> Delete'.html_safe, date, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <% if @workshop_dates.size == 0 %>
            <center>
              <h3>There are currently no workshop sessions.<br> Fix this using the "New Workshop Session" button located above.</h3>
            </center>
          <% end %>
        </div>
      </div>
      <div class="card">
        <center>
          <%= will_paginate @workshop_dates %>
        </center>
      </div>
    </div>
  </div>
</div>
</section>

<div id="modal1" class="modal">
  <div class="modal-content">
    <div class="row">
      <div class="col s12">
        <h4>New Workshop Session</h4>
      </div>
      <%= render "form" %>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#!" class=" modal-action modal-close waves-effect btn-flat">Close</a>
  </div>
</div>
<script>
$(document).ready(function(){
  // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
  $('.modal-trigger').leanModal();
});
</script>  
