<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <div class="form-group input-field">
      <%= f.input :title %>
    </div>
    <div class="#">
      <div class="file-field input-field gallery_picture">
        <div class="row">
          <div class="col s2">
            <div class="btn black-text">
              <span>Image</span>
              <%= f.file_field :image %>
            </div>
          </div>
          <div class="col s10">
            <input class="file-path validate" type="text" placeholder="Upload an opening image. Can't be empty.">
          </div>
        </div>
      </div>
    </div>
    <div class="form-group input-field">
      <%= f.input :lead, input_html: {class: "form-group materialize-textarea"} %>
    </div>
    <%= f.input :content, input_html: { class: 'ckeditor'} %>
    <div class="form-group input-field">
      <%= f.select :publish, [["Publish", true], ["Don't Publish", false]], input_html: {class: "form-control"} %>
    </div>
    <div>
      <label for="published_date">Date Published</label>
      <%= f.text_field :published_date, class: "datepicker", placeholder: "Select a published date. Can't be empty." %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-large submit-button" %>
  </div>
<% end %>

<script>
$('.ckeditor').ckeditor({
  // optional config
});

$('.datepicker').pickadate({
  selectMonths: true, // Creates a dropdown to control month
  selectYears: 15 // Creates a dropdown of 15 years to control year
});
</script>

