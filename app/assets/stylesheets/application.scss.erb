@import "materialize/components/color";
$primary-color: color("light-blue", "") !default;
@import 'materialize';
@import 'YTPlayer';
@import 'academy_application';

body {
  background: #EEE;
  display: flex;
  min-height: 100vh;
  flex-direction: column;
  font-family: 'minerva-modern', roboto, sans-serif;
  <%# font-family: "proxima-nova","dapifer", garamond, serif; %>
}
h1,h2,h3,h4,h5,h6 {
  font-family: 'minerva-modern', roboto, sans-serif;
}
.h5-inline {
  display: inline;
}
nav {
  background-color: rgba(0,0,0,.3);
}
section {
  padding-top: 50px;
  padding-bottom: 50px;
}
.fixed-width-tabs {
  width: 100%;
}
#contact-cards {
  min-height: 100%;
}
strong {
  font-weight: bold;
}
.btn, .btn-large{
  text-decoration: none;
  color: #fff;
  background-color: transparent;
  border: white solid 3px;
  text-align: center;
  letter-spacing: 1px;
  -webkit-transition: 0.2s ease-out;
  -moz-transition: 0.2s ease-out;
  -o-transition: 0.2s ease-out;
  -ms-transition: 0.2s ease-out;
  transition: 0.2s ease-out;
  cursor: pointer;
}
.btn, .btn-large, .btn-flat {
  border-radius: 1px;
  display: inline-block;
  /*height: 36px;
  line-height: 36px;*/
  text-transform: uppercase;
  vertical-align: middle;
  -webkit-tap-highlight-color: transparent;
}
.hero-button {
  width: 350px;
}
.vertical {
  position: relative;
  top: 50%;
  <%# transform: translateY(-50%); %>
}
.highlight {
  background-color: rgba(255,255,255,0.5);
}
#caption-jamie {
  margin-left: -70px;
  margin-top: -120px;
}
#caption-matthew {
  margin-top: -100px;
  margin-left: 150px;
}
#apply-text, #slides-text {
  color: white;
  text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
}
#slider-industry {
  height: 50%;
}
#slide-container {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}
#submit-button {
  color: black;
  background-color: #E0E0E0;
  border: black solid;
}
.info-session-button {
  background-color: #46A8C6;
  border: none;
}
#delete-account {
  color: black;
  border: none;
}
#white-button {
  color: black;
  background-color: #FFFFFF;
  border: none;
}
#curriculum-button {
  color: black;
  background-color: #E0E0E0;
  border: none;
}
#team-cards {
  min-height: 700px;
}
.border-button {
  border: 3px white solid;
  padding: 10px;
  color: white;
}
.non-border-button {
  border: none;
  padding: 10px;
  color: white;
}
.collapsible-body p {
  margin: 0;
  padding: 5px 20px;
}
.fa-ul {
  padding-left: 10px;
}
.collapsible-body {
  padding: 10px 40px;
}
.bold {
  font-weight: 700;
}
.course-type {
  background-color: white;
  font-size: 1em;
  padding: 5px;
  font-family: "proxima-nova", serif;
}
footer.page-footer {
  margin-top: 0px;
  padding-top: 20px;
  background-color: #1f2b3a;
}
.transparent-card {
  background-color: rgba(0,0,0,0.3);
  border: 2px white solid;
}
.transparent-card h4 {
  font-size: 24px;
  line-height: 20px;
  margin-top: 0;
}
.transparent-button {
  background-color: rgba(0,0,0,.02);
  border: 2px white solid;
  padding: 10px;
}
.tagline {
  padding: 10px;
}
.content {
  font-family: 'proxima-nova';
  padding-bottom: 8px;
}
@media only screen and (min-width: 1200px) {
  html {
    font-size: 16px;
  }
}
@media(max-width: 480px) {
  h1 {
    padding-top: 30px;
    font-size: 30pt;
  }
}
#tech-heroes {
  background: url(<%= asset_path 'heroes2.jpg' %>);
  height: 400px;
  background-size: cover;
}
#header-boxes {
  display: flex;
  align-content: stretch;
  align-items: stretch;
}
#vertical-rule {
  border-left: 1px solid black;
  height: 100%;
}
.header-box {
  padding-top: 10px;
  flex: 1;
  height: 220px;
}
.header-box:first-child { display: flex; }
.header-box:last-of-type { flex: 3;}

.blog-post h1 {
  margin: 5px;
  font-size: 30px;
}
.partner-logo {
  background-color: white;
}
.btn:hover, .btn-large:hover {
  background-color: #46A8C6
}

.community {
  background-image: url(http://res.cloudinary.com/coder-factory/image/upload/v1418034058/heart_fivwmy.jpg);
  background-size: cover;
  background-repeat: none;
  height: 800px;
}
.pagination a li.active {
  color: #fff;
}
.disabled {
  color: grey;
}

.capitals {
  text-transform: uppercase;
}
nav {
  background-color: rgba(0,0,0,0.5);
}
.card .card-action a {
  color: #03A9F4;
}
.card .card-action a:hover {
  color: #333;
}
.card {
  overflow: visible !important;
  width: 100%;
}
#infoModal {
  overflow: scroll !important;
}
#workshopModal {
  overflow: scroll !important;
}
.modal {
  overflow: visible !important;
}

#customElement {
  width: 100%;
  height: 700px;
  background: rgba(0, 0, 0, 1);
  position: relative;
  top: 0;
  left: 0;
  z-index: 0;
  margin-top: -110px;
  color: rgba(255,255,255,0.8);
  padding-top: 10%;
  /*background-image: url(<%= @video_background %>); */
}
.top-bar, .top-bar a {
  color: white;
  padding:0px;
}
#top-section {
  margin-top: -80px;
  padding-top: 80px;
}
.hero-title {
  font-size: 6em;
  text-transform: uppercase;
}


span.badge {
  right: inherit;
}
.parallax-container {
  height: 600px;
}

